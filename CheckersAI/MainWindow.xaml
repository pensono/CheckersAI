<Window x:Class="Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersAI"
        mc:Ignorable="d"
        Title="MainWindow" d:DesignWidth="679.218" d:DesignHeight="753.539">
    <DockPanel>
        <Label DockPanel.Dock="Bottom" Content="{Binding Board.Turn, ElementName=Board, StringFormat=Current Turn: \{0:G\}}"/>
        <local:CheckersBoardView x:Name="Board" Height="640" Width="640"></local:CheckersBoardView>
    </DockPanel>
</Window>
